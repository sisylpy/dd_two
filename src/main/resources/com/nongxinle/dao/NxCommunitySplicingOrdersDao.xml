	<select id="queryNewPindan" resultMap="splicingOrderDetail">
		select * from nx_community_splicing_orders as ncso
		left join nx_community_orders_sub as spSub on spSub.nx_COS_splicing_orders_id = ncso.nx_community_splicing_orders_id
		    and  spSub.nx_COS_order_user_id = #{orderUserId} and spSub.nx_cos_type = #{orderType}
		left join nx_customer_user as ncu on ncu.nx_CU_user_id = spSub.nx_COS_order_user_id
		left join nx_customer_user_card as nccc on nccc.nx_cuca_customer_user_id = #{orderUserId} and
		                                           nccc.nx_cuca_status = -1 and nccc.nx_cuca_is_selected = 1
		left join nx_community_card as ncc  on ncc.nx_community_card_id = nccc.nx_cuca_card_id
		left join nx_community_goods as ncg on ncg.nx_community_goods_id = spSub.nx_COS_community_goods_id

		<where>
			<if test="id != null">
				and ncso.nx_cso_co_order_id = #{id}
			</if>
			<if test="orderUserId != null">
				and ncso.nx_cso_user_id = #{orderUserId}
			</if>

			<if test="status != null">
				and ncso.nx_cso_status = #{status}
			</if>
		</where>
	</select>

