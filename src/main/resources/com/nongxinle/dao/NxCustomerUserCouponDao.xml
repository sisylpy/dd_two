			`nx_cuc_coupon_id`, 
			`nx_cuc_customer_user_id`, 
			`nx_cuc_share_user_id`,
			`nx_cuc_community_id`, 
			`nx_cuc_status`,
			`nx_cuc_type`,
			`nx_cuc_sub_order_id`
		)
		values
		(
			#{nxCustomerUserCouponId},
			#{nxCucCouponId}, 
			#{nxCucCustomerUserId}, 
			#{nxCucShareUserId},
			#{nxCucCommunityId}, 
